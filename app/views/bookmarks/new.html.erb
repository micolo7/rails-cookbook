<h1>Add a Recipe to <%= @category.name %></h1>

<%= simple_form_for [@category, @bookmark] do |f| %>
  <%= f.association :recipe, label_method: :name, value_method: :id, label: "Select a Recipe" %>
  <%= f.input :comment, label: "Comment" %>
  <%= f.button :submit, "Add Recipe", class: "btn btn-primary" %>
<% end %>

<%= link_to "Back to Category", category_path(@category), class: "btn btn-secondary" %>
